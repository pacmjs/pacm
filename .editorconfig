root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript (if any)
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 2

# PowerShell files
[*.ps1]
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# Git config files
[.git*]
indent_size = 2

# TODO: Add project-specific overrides as needed
